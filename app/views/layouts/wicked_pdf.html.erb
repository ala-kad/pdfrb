<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
  
    @page {
      size: A4;
      margin: 10mm;
    }
  
    @page :first {
      margin: 0;
      background-color: #f8fafc;
      @bottom-center { content: none; }
    }
  
    body {
      font-family: 'Inter', sans-serif;
      font-size: 12px;
      line-height: 1.5;
      color: #4b566b;
      margin: 0;
      padding: 15px;
      background: #f8fafc;
    }
  
    .header-pdf {
      text-align: center;
      margin-top: 8mm;
    }
  
    .header-pdf img {
      max-height: 300px;
      margin: 0 auto;
    }
  
    .container {
      margin-top: 15px;
    }
  
    .section-block {
      page-break-inside: avoid;
      margin-bottom: 20px;
      background: #ffffff;
      border-radius: 10px;
      padding: 20px;
      border: 2px solid #2a4798;
      box-shadow: 0 2px 8px rgba(42, 71, 152, 0.3);
    }
  
    h1, h2, h3 {
      color: #2a4798;
      text-align: center;
      margin: 10px 0 8px;
      padding-bottom: 6px;
      border-bottom: 2px solid #6d6e71;
      page-break-after: avoid;
    }
  
    h1 { font-size: 26px; }
    h2 { font-size: 22px; }
    h3 { font-size: 18px; text-align: left; }
  
    img {
      max-height: 3in;
      object-fit: contain;
      display: block;
      margin: 0 auto;
    }
  
    table, th, td {
      border: 2px solid #2a4798; 
      border-collapse: collapse;
    }
  
    table {
      width: 100%;
      margin-top: 10px;
      margin-bottom: 10px;
      box-shadow: 0 2px 8px rgba(42, 71, 152, 0.3);
      border-radius: 6px;
      overflow: hidden;
      page-break-inside: avoid;
    }
  
    th {
      background-color: #2a4798;
      color: #ffffff;
      padding: 12px;
      font-size: 12px;
      text-align: center;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
  
    td {
      padding: 10px;
      font-size: 11px;
      background: #ffffff;
      text-align: center;
      color: #4b566b;
    }
  
    tr:nth-child(even) td {
      background: #f0f2f5; 
    }
  
    p {
      margin-bottom: 8px;
      text-align: justify;
    }
  
    ul, ol {
      margin-left: 20px;
      padding-left: 0;
      margin-bottom: 10px;
    }
  
    li {
      margin-bottom: 6px;
    }
  
    .metric-box {
      background: rgba(42, 71, 152, 0.15); 
      border: 2px solid rgba(42, 71, 152, 0.4); 
      border-radius: 10px;
      padding: 16px;
      margin: 10px 0;
      text-align: center;
      page-break-inside: avoid;
    }
  
    .footer {
      text-align: center;
      font-size: 9px;
      color: #6d6e71;
      margin-top: 20px;
    }
  </style>
  
  </head>
  <body onload="number_pages">
    <div class="header-pdf">
      <%= wicked_pdf_image_tag '1.png', alt: 'Logo' %>
    </div>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
